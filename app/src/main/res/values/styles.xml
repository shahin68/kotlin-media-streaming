<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OvalImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOnPrimary</item>
    </style>
    
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="menu">@menu/bottom_nav_menu</item>
        <item name="itemIconTint">?attr/colorPrimaryVariant</item>
        <item name="itemTextColor">?attr/colorPrimaryVariant</item>
        <item name="itemRippleColor">?attr/colorPrimaryVariant</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="elevation">@dimen/bottom_navigation_view_elevation</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerViewStyle" parent="">
        <item name="auto_show">true</item>
        <item name="resize_mode">zoom</item>
        <item name="rewind_increment">5</item>
        <item name="show_buffering">when_playing</item>
        <item name="use_artwork">true</item>
        <item name="use_controller">true</item>
        <item name="use_sensor_rotation">true</item>
        <item name="shutter_background_color">?attr/colorOnPrimary</item>
    </style>
</resources>